{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Java Program",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "cd ${fileDirname} && javac ${file} && java ${fileBasenameNoExtension} < input.txt > output.txt"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
